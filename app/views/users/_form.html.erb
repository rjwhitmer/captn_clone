<%= form_with model: @user do |f| %>
<div class="w-25 m-auto">
  <div class="d-flex justify-content-between mb-2">
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-input' %>
  </div>
  <div class="d-flex justify-content-between mb-2">
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-input' %>
  </div>
  <div class="d-flex justify-content-between mb-2">
    <%= f.label :birthday, class: 'form-label' %>
    <%= f.date_field :birthday, class: 'form-input' %>
  </div>
  <div class="d-flex justify-content-between mb-2">
    <%= f.label :phone_number, class: 'form-label' %>
    <%= f.number_field :phone_number, class: 'form-input' %>
  </div>
  <div class="d-flex justify-content-between mb-2">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-input' %>
  </div>
  <%= f.submit "Let's play!" %>
</div>
<% end %>
